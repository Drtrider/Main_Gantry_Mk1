//PourFunctions_Mk1

void setup() {
  pinMode(13,INPUT);
  pinMode(12,INPUT);
  pinMode(11,INPUT);
  pinMode(10,INPUT);
  pinMode(9,OUTPUT);
  pinMode(8,OUTPUT);
  pinMode(7,OUTPUT); 
  pinMode(6,OUTPUT);
}

  int pourOne(){
    if (digitalRead(12)== HIGH){
      digitalWrite(9,HIGH);
      digitalWrite(8,HIGH);
      delay(2000);
      digitalWrite(9,LOW);
      delay(1000);
      digitalWrite(8,LOW);
      delay(3000);
    }
  }

void loop() {
  pourOne();
}
